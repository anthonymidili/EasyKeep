- provide(:title, 'Inventory Items')

.row
  .small-12.columns
    %h1.main_page_header= "#{current_company.name} Inventory Items"
    .scroll_overflow-x
      %table
        %thead
          %tr
            %th Item
            %th Unit amount
            %th Serial number
            %th Description
            %th Edit
            %th Destroy

        %tbody
          - @inventory_items.each do |inventory_item|
            %tr
              %td= link_to inventory_item.item, inventory_item
              %td= inventory_item.unit_amount
              %td= inventory_item.serial_number
              %td= inventory_item.description
              %td.center_cell
                = link_to edit_inventory_item_path(inventory_item) do
                  %i.page.fi-page-edit
              %td.center_cell
                = link_to inventory_item, method: :delete,
                confirm: 'Are you sure? This will permanently DELETE your Inventory Item!'  do
                  %i.general.fi-x
    %br/

    = link_to 'New Inventory Item', new_inventory_item_path
