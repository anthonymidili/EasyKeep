- provide(:title, raw(@inventory_item.description))

.row
  .small-12.columns
    %h3.main_page_header= @inventory_item.description
    %br/

    %p
      %b Quantity:
      = sprintf('%g' % @inventory_item.quantity)

    %p
      %b Serial number:
      = @inventory_item.serial_number

    %p
      %b Tags:
      = @inventory_item.tag_list

    = link_to 'Edit', edit_inventory_item_path(@inventory_item)
    |
    = link_to 'Back', inventory_items_path
