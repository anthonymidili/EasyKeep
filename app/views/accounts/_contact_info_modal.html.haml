%div{id: "contactInfoModal#{account.id}", class: 'reveal medium', data: { reveal: true }}
  %h1
    = account.name
    %small Contact Information

  %hr/

  %ul.menu.vertical
    %li
      %label
        %b Address:
        = account.full_address
    %li
      %label
        %b Phone:
        = account.phone
    %li
      %label
        %b Fax:
        = account.fax
    %li
      %label
        %b Email:
        = mail_to account.user.email, nil, target: '_blank'
  %button.close-button{aria: {label: 'Close modal'}, data: {close: true}, type: 'button'}
