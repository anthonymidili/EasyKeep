<%= form_for(@account) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <% unless @account.user == current_user %>
    <div class="row">
      <div class="small-12 large-6 columns">
        <%= f.label :account_name %>
        <%= f.text_field :name, autofocus: true %>
      </div>
    </div>
  <% end %>

  <%= f.fields_for(:user) do |user_f| %>
    <div class="row">
      <div class="small-12 large-6 columns">
        <%= user_f.label :contact_name %>
        <%= user_f.text_field :name %>
      </div>
      <% unless @account.user == current_user %>
        <div class="small-12 large-6 columns">
          <%= user_f.label :email %>
          <%= user_f.text_field :email %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= render 'shared/address_fields', f: f %>
<% end %>
