<%= form_for(@account) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="row">
    <div class="small-12 large-6 columns">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="small-12 large-6 columns">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
  </div>

  <%= render 'shared/address_fields', f: f %>
<% end %>
