- provide(:title, raw("#{@account.name} Account"))

.row
  .small-12.small-centered.columns
    %ul.inline-list.pad-top
      %li= link_to 'Edit Account Info', edit_account_path(@account), class: 'small button radius'
      - if current_user.is_owner?
        %li
          = link_to 'Destroy Account', @account, class: 'small alert button radius', method: :delete,
          data: { confirm: 'Are you sure? This will permanently DELETE your ACCOUNT information and all SERVICES, INVOICES, and PAYMENTS applied to the ACCOUNT!' }

    %h3.main_page_header= "#{@account.name} Account"
    .panel= render 'shared/customer_header'

    .outline= render 'services/new'
    - if @services.by_not_used.any?
      .outline= render 'services/invoiceable'
    .outline= render 'services/history'

    %br/

    %ul.inline-list
      %li= link_to 'Account Listings', accounts_path, class: 'small button radius'
      %li= link_to "#{@account.name} Invoices", invoices_path, class: 'small button radius'
