              method: :post,
              class: 'tiny button radius user_status',
              title: 'to view there account information' %>
<% elsif account.user.encrypted_password.present? %>
  Active
  <%= link_to 'Re-invite', invite_user_path(account_id: account),
              method: :post,
              class: 'tiny button radius user_status',
              title: 'to view there account information' %>
<% elsif account.user.email.present? %>
  <%= link_to 'Invite', invite_user_path(account_id: account),
              method: :post,
              class: 'tiny button radius user_status',
              title: 'to view there account information' %>
<% else %>
  no email
<% end %>
