<div class="fixed hide_on_print">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <!-- Title Area -->
      <li class="name">
        <h1><%= link_to 'House Keeping', root_path %></h1>
      </li>
      <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
        <li class="divider"></li>
        <li class="active"><%= link_to 'Home', root_path %></li>
        <% if user_signed_in? %>

          <!-- Account drop-down -->
          <% if !current_user.company.nil? && @account && @account.persisted? %>
            <li class="divider"></li>
            <li class="has-dropdown"><a href="#"><%= @account.name %></a>
              <ul class="dropdown">
                <li><%= link_to 'Account', account_path(@account) %></li>
                <li><%= link_to 'Invoices', invoices_path(account_id: @account.id) %></li>
                <li><%= link_to 'Edit Account', edit_account_path(@account) %></li>
                <% if current_user.is_admin? %>
                  <li><%= link_to 'Destroy Account', @account, method: :delete, confirm: 'Are you sure? This will permanently delete your account and all the information.' %></li>
                <% end %>
              </ul>
            </li>
          <% end %>

          <!-- Company drop-down -->
          <% if current_user.company && current_user.company.persisted? && current_user.is_admin? %>
            <li class="divider"></li>
            <li class="has-dropdown"><a href="#">Company settings</a>
              <ul class="dropdown">
                <li><%= link_to 'Company', company_path %></li>
                <li><%= link_to 'Edit', edit_company_path %></li>
                <li><%= link_to 'Invite Admin', new_user_invitation_path %></li>
                <li><%= link_to 'Destroy', current_user.company,
                                method: :delete,
                                data: { confirm: 'Are you sure? This will PERMANENTLY DELETE your COMPANY and all the ACCOUNTS attached to your company!' } %></li>
              </ul>
            </li>
          <% end %>

          <li class="divider"></li>
          <li><%= link_to 'User settings', edit_user_registration_path %></li>
          <li class="divider"></li>
          <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'Sign in', new_user_session_path %></li>
        <% end %>
      </ul>
    </section>
  </nav>
</div>