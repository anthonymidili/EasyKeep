<% provide(:title, 'Sign in') %>

<div class="hero-unit center-devise-forms">

  <h2 class="heading">Sign in</h2><br>

  <%= form_for(resource,
               :as => resource_name,
               :url => session_path(resource_name)) do |f| %>

    <div class="control-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'input-block-level', :autofocus => true %>
    </div>

    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'input-block-level' %>
    </div>

    <div class="control-group checkbox inline">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end -%>
    </div>

    <br><br>

    <div class="control-group">
      <%= f.submit 'Sign in', class: 'btn btn-large btn-block btn-primary' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>

</div>
