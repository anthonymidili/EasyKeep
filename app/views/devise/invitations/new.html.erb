<% provide(:title, 'Invite User') %>

<div class="row">
  <div class="small-12 medium-6 large-6 small-centered columns">

    <h2><%= t "devise.invitations.new.header" %> to a new admin user</h2>

    <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
      <%= devise_error_messages! %>

      <p><%= f.label :name %>
      <%= f.text_field :name %></p>

      <% resource.class.invite_key_fields.each do |field| -%>
        <p><%= f.label field %>
          <%= f.text_field field %></p>
      <% end -%>

      <p><%= f.submit t("devise.invitations.new.submit_button"), class: 'small button radius expand' %></p>
    <% end %>

  </div>
</div>
