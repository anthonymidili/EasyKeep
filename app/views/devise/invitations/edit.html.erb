<% provide(:title, 'Set Password') %>

<div class="row">
  <div class="small-12 medium-8 large-8 columns">
    <h1>Welcome to EasyKeep</h1>

    <p>You can view your account history all in one place, anytime and everywhere.</p>

    <ul>
      <li><b>Services</b> - See when we were there and the cost of our visit.</li>
      <li><b>Invoices</b> - See how much you owe and and how much you've paid.</li>
      <li><b>Account info</b> - Phone number or email address change? Update your account info so we can
        keep in touch.</li>
    </ul>
  </div>

  <br>

  <div class="small-12 medium-4 large-4 columns panel">
    <h4><%= t 'devise.invitations.edit.header' %></h4>

    <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :invitation_token %>

      <p><label>Your name</label>
        <%= resource.name %></p>

      <p><label>Your email</label>
        <%= resource.email %></p>

      <p><%= f.label :password %>
        <%= f.password_field :password %></p>

      <p><%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %></p>

      <p><%= f.submit t("devise.invitations.edit.submit_button"), class: 'small button radius expand' %></p>
    <% end %>
  </div>
</div>
