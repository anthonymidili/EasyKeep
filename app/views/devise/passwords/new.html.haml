- provide(:title, 'Forget Something')

.row
  .small-12.medium-6.large-6.small-centered.columns
    %h2 Forgot your password?

    = form_for(resource, as: resource_name, url: password_path(resource_name),
    html: { method: :post }) do |f|
      = devise_error_messages!

      = f.label :email
      = f.text_field :email, autofocus: true

      %br/

      = f.submit 'Send me reset password instructions', class: 'button radius expand'

    = render 'devise/shared/links'
