.outline
  %h4 New Service
  = form_for @service, url: dashboard_create_services_path, method: :post do |f|
    = render 'shared/error_messages', object: f.object

    .row
      .small-12.medium-12.large-6.columns
        = f.label :account_id do
          Select Existing Account or
          = link_to 'Create New Account', new_account_path
        = f.collection_select :account_id, @accounts.by_name, :id, :name

    .row
      .small-12.medium-6.large-6.columns
        = f.label :performed_on, 'Performed on (yyyy-mm-dd)'
        = f.text_field :performed_on, class: 'datePicker', placeholder: 'Date'

      .small-12.medium-6.large-6.columns
        = f.label :cost
        .input-group
          %span.input-group-label $
          = f.number_field :cost, step: 0.01, placeholder: '0.00', class: 'input-group-field'


    .row
      .small-12.medium-6.large-6.columns
        = f.label :memo
        = f.text_field :memo

      .small-12.medium-6.large-6.columns
        = f.submit class: 'small button small_button_down radius expanded'
