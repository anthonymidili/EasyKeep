- provide(:title, 'Developer Dashboard')

.row
  .small-12.columns
    = image_tag 'ManOnFire_WebDesign_Header_medium.png'
    %h1.main_page_header Developer Dashboard
    %br/

    %h3 Users
    %ul.no_bullets
      %li
        Number of users:
        %b= User.all.count
      %li
        Number of company owners:
        %b= User.by_owner_user.count
  %hr/

.row
  .small-6.columns
    %b= params[:all_users] ? 'Viewing all users' : 'Only viewing Admins'
    |
    = admin_or_all_users

%br/

= render 'users_table'

.row
  .small-12.columns
    = paginate @users
