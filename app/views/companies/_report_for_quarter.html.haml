.row
  .small-12.columns
    %h4
      = "Quarterly Report - #{active_date.year}"
      %small= "#{quarter_name} Quarter"

    .scroll_overflow-x
      %table
        %thead
          %tr
            %th= 'Account'.pluralize(@accounts.count)
            %th= month_in_quarter_date(0).strftime('%B')
            %th= month_in_quarter_date(1).strftime('%B')
            %th= month_in_quarter_date(2).strftime('%B')
            %th Account totals

        %tbody
          - @accounts.each do |account|
            %tr
              %td= account.name
              %td= number_to_currency(account.total_account_payments(month_in_quarter_date(0), 'month'))
              %td= number_to_currency(account.total_account_payments(month_in_quarter_date(1), 'month'))
              %td= number_to_currency(account.total_account_payments(month_in_quarter_date(2), 'month'))
              %td= number_to_currency(account.total_account_payments(view_quarter_date, 'quarter'))
          %tr.divider-line
            %td
              %b Totals
            %td
              %b= number_to_currency(current_company.total_company_payments(month_in_quarter_date(0), 'month'))
            %td
              %b= number_to_currency(current_company.total_company_payments(month_in_quarter_date(1), 'month'))
            %td
              %b= number_to_currency(current_company.total_company_payments(month_in_quarter_date(2), 'month'))
            %td.red_text
              %b= number_to_currency(current_company.total_company_payments(view_quarter_date, quarter_or_year))

.row
  .small-12.columns.total_amount
    %ul.inline-list
      %li
        %label
          = "#{quarter_name} quarter total amount received:"
          %span.large_red_text
            = number_to_currency(current_company.total_company_payments(view_quarter_date, quarter_or_year))
      %li
        %label
          Total less taxes applied:
          %span.large_red_text
            = number_to_currency(current_company.total_less_taxes(view_quarter_date, quarter_or_year))
      %li
        %label
          Taxes applied to total:
          %span.large_red_text
            = number_to_currency(current_company.taxes_applied(view_quarter_date, quarter_or_year))
