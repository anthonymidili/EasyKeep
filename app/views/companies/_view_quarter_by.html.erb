<div class="row">
  <!-- Active Date Form -->
  <%= form_tag quarterly_report_company_path(@company), class: 'left', method: :get do %>
    <div class="small-12 columns">
      <ul class="inline-list">
        <li><%= select_date(active_date, discard_month: true, discard_day: true) %></li>
        <li><%= submit_tag "Select #{view_by.capitalize} to View", class: 'tiny button radius', name: nil %></li>
      </ul>
    </div>
  <% end %>

  <!-- Select Quarter -->
  <%= form_tag quarterly_report_company_path(@company), class: 'left', method: :get do %>
    <div class="small-12 columns">
      <ul class="inline-list">
        <li>
          <%= select_tag :view_quarter, options_for_select([['1st', 1],
                                                              ['2nd', 4],
                                                              ['3rd', 7],
                                                              ['4th', 10]], selected: view_quarter) %>
        </li>
        <li><%= submit_tag 'Select Quarter', class: 'tiny button radius', name: nil %></li>
      </ul>
    </div>
  <% end %>
</div>
