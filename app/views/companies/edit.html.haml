- provide(:title, 'Edit Company')

.row
  .small-12.columns
    %h1.main_page_header Editing Company
    %br/

    %label Company Header Preview
    .outline= render 'companies/header_preview'

    = render 'form'

.row
  .small-12.columns
    %ul.inline-list
      %li= link_to 'Dashboard', dashboard_path, class: 'small button radius'
      %li= link_to 'Company admins', company_path, class: 'small button radius'
      %li
        = link_to 'Destroy Company', @company, class: 'small alert button radius', method: :delete,
        data: { confirm: t(:confirm_delete_company) }
