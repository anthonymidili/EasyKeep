<% provide(:title, 'Quarterly Report') %>

<div class="row">
  <div class="small-12 columns">

    <h1>Quarterly Report</h1>

    <%= render 'view_quarter_by' %>

    <table>
      <thead>
      <tr>
        <th>Account</th>
        <th><%= Date.new(active_date.year, view_quarter, 1).strftime('%B') %> totals</th>
        <th><%= Date.new(active_date.year, view_quarter + 1, 1).strftime('%B') %> totals</th>
        <th><%= Date.new(active_date.year, view_quarter + 2, 1).strftime('%B') %> totals</th>
      </tr>
      </thead>

      <% @accounts.each do |account| %>
        <tbody>
        <tr>
          <td><%= account.name %></td>
          <td><%= account.accounts_totals_1(active_date, view_quarter) %></td>
          <td><%= account.accounts_totals_2(active_date, view_quarter) %></td>
          <td><%= account.accounts_totals_3(active_date, view_quarter) %></td>
        </tr>
        </tbody>
      <% end %>
    </table>

  </div>
</div>
