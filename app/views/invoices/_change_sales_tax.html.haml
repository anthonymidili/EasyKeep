= form_for @invoice do |f|
  = render 'shared/error_messages', object: f.object if params[:show] == 'sales_tax_error'
  = hidden_field_tag :show, :sales_tax_error

  .row.collapse
    .small-4.medium-4.large-2.columns
      = f.number_field :sales_tax

    .small-8.medium-8.large-5.columns
      %span.postfix.text_left % Sales Tax:

    .small-12.medium-12.large-4.columns
      = f.submit 'Update', class: 'tiny button radius'
