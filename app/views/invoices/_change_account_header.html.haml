= form_for current_account, url: change_account_header_invoice_path(@invoice),
html: { id: 'change_account_header' } do |f|

  .row
    .small-12.medium-12.large-4.columns
      %label
        = f.check_box :uses_account_name
        Use Account/Company name on invoices

    .small-12.medium-12.large-4.columns
      %label
        = f.check_box :uses_contact_name
        Use Contact name on invoices

    .small-12.medium-12.large-4.columns
      = submit_tag 'Update Account Header', class: 'tiny button radius'
