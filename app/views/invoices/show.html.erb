<% provide(:title, raw("#{@account.name} Invoice #{@invoice.id}")) %>

<div class="row">
  <div class="small-12 small-centered columns">

    <h1><%= "#{@account.name} Invoice" %></h1>

    <b>Invoice # <%= @invoice.id %></b>

    <div class="panel">
      <ul class="inline-list">
        <li><b>Invoice for: </b><%= @account.user.name %></li>
        <% if @account.full_address.present? %>
          <li><b>Address: </b><%= @account.full_address %></li>
        <% end %>
        <% if @account.phone.present? %>
          <li><b>Phone: </b><%= @account.phone %></li>
        <% end %>
        <% if @account.fax.present? %>
          <li><b>Fax: </b><%= @account.fax %></li>
        <% end %>
        <% if @account.user.email.present? %>
          <li><b>Email: </b><%= mail_to @account.user.email %></li>
        <% end %>
      </ul>
    </div>

    <table class="small-12">
      <thead>
        <tr>
          <th>Performed on</th>
          <th>Price</th>
        </tr>
      </thead>

      <% @services.each do |service| %>
        <% if service.persisted? %>
          <tbody>
            <tr>
              <td><%= service.performed_on.strftime("%Y-%b-%d") %></td>
              <td><%= number_to_currency(service.price, unit: '$') %></td>
            </tr>
          </tbody>
        <% end %>
      <% end %>
    </table>

    <div class="row">
      <div class="small-12 columns">
        <div class="total_amount">
          <p>Sub Total: <span><%= sub_total(@services) %></span></p>
          <p>7% Tax: <span><%= tax(@services) %></span></p>
        </div>
      </div>
    </div>

  </div>
</div>