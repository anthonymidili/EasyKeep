<% provide(:title, raw("#{@account.name} Invoice #{@invoice.id}")) %>

<div class="row">
  <div class="small-12 small-centered columns">

    <%= render 'header' %>

    <table>
      <thead>
        <tr>
          <th>Date performed</th>
          <th>Service cost</th>
        </tr>
      </thead>

      <% @services.each do |service| %>
        <% if service.persisted? %>
          <tbody>
            <tr>
              <td><%= service.performed_on.strftime("%Y-%b-%d") %></td>
              <td><%= number_to_currency(service.price) %></td>
            </tr>
          </tbody>
        <% end %>
      <% end %>
    </table>

    <div class="row">
      <div class="small-12 columns total_amount">
        <p>
          Sub Total: <%= number_to_currency(@invoice.sub_total) %> <br>
          7% Sales Tax: <%= number_to_currency(@invoice.tax) %> <br>
          Total: <span><%= number_to_currency(@invoice.total_cost) %></span>
        </p>
      </div>
    </div>

    <ul class="inline-list hide_on_print">
      <li>
        <%= link_to 'Edit Invoice', edit_account_invoice_path(@account, @invoice), class: 'small button radius' %>
      </li>
      <li>
        <%= link_to "#{@account.name} Account", account_path(@account), class: 'small button radius' %>
      </li>
      <li>
        <%= link_to "#{@account.name} Invoices", account_invoices_path(@account), class: 'small button radius' %>
      </li>
    </ul>

  </div>
</div>