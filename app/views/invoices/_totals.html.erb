<div class="row">
  <div class="small-6 columns total_amount">
    <p>
      Sub Total: <%= number_to_currency(@invoice.sub_total) %> <br>
      7% Sales Tax: <%= number_to_currency(@invoice.tax) %> <br>
      Total: <span><%= number_to_currency(@invoice.total_cost) %></span>
    </p>
  </div>
  <div class="small-6 columns total_amount">
    <p>
      <% if @invoice.payments.any? %>
        Payments Total: <%= number_to_currency(@invoice.payments_total) %> <br>
        <% if @invoice.money_is_owed? %>
          Money Owed: <span><%= number_to_currency(@invoice.money_owed) %></span>
        <% else %>
          <%= image_tag('paid_in_full.png') %>
        <% end %>
      <% end %>
    </p>
  </div>
</div>
