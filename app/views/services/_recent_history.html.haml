.outline
  %h4 Recent Service History

  .scroll_overflow-x
    %table
      %thead
        %tr
          %th Invoice#
          %th Performed on
          %th Memo
          %th Cost
          - if current_user.is_admin?
            %th Edit
            %th Delete

      %tbody
        - @services.with_limit.each do |service|
          - if service.persisted?
            = render 'services/history_table_row', service: service

  .label_size= link_to "#{current_account.name} Service History Search", history_search_services_path
