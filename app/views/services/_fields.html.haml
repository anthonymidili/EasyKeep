.row
  .small-12.medium-6.large-6.columns
    = f.label :performed_on, 'Performed on (yyyy-mm-dd)'
    = f.text_field :performed_on, class: 'datePicker', placeholder: 'Date'

  .small-12.medium-6.large-6.columns
    = f.label :cost
    .row.collapse
      .small-3.medium-2.large-2.columns
        %span.prefix $
      .small-9.medium-10.large-10.columns
        = f.number_field :cost, step: 0.01, placeholder: '0.00'

.row
  .small-12.medium-6.large-6.columns
    = f.label :memo
    = f.text_field :memo

  .small-12.medium-6.large-6.columns
    = f.submit class: 'small button small_button_down radius expand'
