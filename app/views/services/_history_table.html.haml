.scroll_overflow-x
  %table
    %thead
      %tr
        %th Invoice#
        %th Performed on
        %th Memo
        %th Cost
        - if current_user.is_admin?
          %th Edit
          %th Delete

    %tbody
      - @services.each do |service|
        - if service.persisted?
          %tr
            %td
              - if service.invoice_id.present?
                = link_to invoice_path(service.invoice) do
                  %i.page.fi-page
                    %b= service.invoice_id
              - else
                %i not invoiced
            %td= service.performed_on.strftime('%Y-%b-%d')
            %td= service.memo
            %td= number_to_currency(service.cost, unit: '$')
            - if current_user.is_admin?
              %td.center_cell
                = link_to edit_service_path(service), class: service.disable_if_payment do
                  %i.page.fi-page-edit
              %td.center_cell
                = link_to service, method: :delete, class: service.disable_if_payment,
                data: { confirm: 'Are you sure? This will permanently DELETE your SERVICE history record!' } do
                  %i.general.fi-x
