<h4>Service History</h4>

<table class="small-12">
  <thead>
    <tr>
      <th>Performed on</th>
      <th>Amount received</th>
      <th>Note</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<% @services.each do |service| %>
  <% if service.persisted? %>
    <tbody>
      <tr>
        <td><%= service.performed_on %></td>
        <td><%= number_to_currency(service.money_received, unit: "$") %></td>
        <td><%= service.note %></td>
        <td><%= link_to 'Edit', edit_account_service_path(@account, service) %></td>
        <td><%= link_to 'Destroy', [@account, service],
                        method: :delete,
                        data: { confirm: 'Are you sure? This will permanently delete your service history record.' } %></td>
      </tr>
    </tbody>
  <% end %>
<% end %>
</table>
