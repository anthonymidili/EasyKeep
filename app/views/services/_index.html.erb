<h4>Service History</h4>

<div class="row">
  <%= render 'services/view_by_form' %>

  <%= render 'services/active_date_form' %>
</div>

<table class="small-12">
  <thead>
    <tr>
      <th>Performed on</th>
      <th>Amount received</th>
      <th>Note</th>
      <% if current_user.is_admin? %>
        <th>Edit</th>
        <th>Delete</th>
      <% end %>
    </tr>
  </thead>

  <%= render "services/#{view_by}_view" %>
</table>

<%= paginate @services %>
