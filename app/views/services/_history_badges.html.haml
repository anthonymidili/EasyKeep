.row
  - services_with_view_by_scope(@services).each do |service|
    - if service.persisted?
      .small-12.medium-6.columns
        .badge.service_badge
          .badge_header

            .row
              .small-8.columns
                %h5
                  Performed on #{service.performed_on.strftime('%Y-%b-%d')}

              - if current_user.is_admin?
                .small-4.columns
                  .pad-top.right
                    = link_to edit_service_path(service) do
                      %i.page.fi-page-edit
                    = link_to service, method: :delete,
                    confirm: 'Are you sure? This will permanently DELETE your SERVICE history record!' do
                      %i.general.fi-x

          .badge_info
            - if service.invoice_id.present?
              = link_to invoice_path(service.invoice_id) do
                %b Invoice#
                %i.page.fi-page
                  %b= service.invoice_id
            - else
              %em not invoiced

            %br/
            %b Cost
            = number_to_currency(service.cost, unit: '$')

            %br/
            - if service.memo.present?
              %b Memo
              = service.memo
