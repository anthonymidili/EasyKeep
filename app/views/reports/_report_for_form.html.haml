.row
  = form_tag accounts_income_reports_path, id: :view_by_selection, method: :get do
    .small-12.columns
      %ul.inline-list
        %li
          %span
            = radio_button_tag 'view_by', :month, view_by == :month
            Quarterly Report
        %li
          %span
            = radio_button_tag 'view_by', :year, view_by == :year
            Yearly Report
        %li= submit_tag 'View By', class: 'tiny button radius', name: nil
