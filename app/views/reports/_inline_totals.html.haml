.row
  .small-12.columns.total_amount
    %ul.inline-list
      %li
        %label
          Total amount received:
          %span.large_red_text
            = number_to_currency(current_company.total_company_payments(quarter_or_year, date_to_view))
      %li
        %label
          Total less taxes applied:
          %span.large_red_text
            = number_to_currency(current_company.total_less_taxes(quarter_or_year, date_to_view))
      %li
        %label
          Taxes applied to total:
          %span.large_red_text
            = number_to_currency(current_company.taxes_applied(quarter_or_year, date_to_view))
