<% if flash[:alert] %>
  <div data-alert class="alert-box alert hide_on_print">
    <%= flash[:alert] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>
<% if flash[:notice] %>
  <div data-alert class="alert-box hide_on_print">
    <%= flash[:notice] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>
