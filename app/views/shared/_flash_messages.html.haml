- if flash[:alert]
  .callout.alert{data: {closable: true}}
    = flash[:alert]
    %button.close-button{aria: {label: 'Dismiss alert'}, data: {close: true}, type: 'button'}
      %span{aria: {hidden: 'true'}} ×

- if flash[:notice]
  .callout.primary{data: {closable: true}}
    = flash[:notice]
    %button.close-button{aria: {label: 'Dismiss alert'}, data: {close: true}, type: 'button'}
      %span{aria: {hidden: 'true'}} ×
