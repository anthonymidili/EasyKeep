<% provide(:title, 'New Payment') %>

<div class="row">
  <div class="small-12 columns">

    <h3>New payment</h3>

    <%= render 'payments/form' %>

    <% if @payment.errors.any? %>
      <ul class="inline-list">
        <li>Money Owed: <%= number_to_currency(@invoice.money_owed) %></li>
        <li><%= link_to 'Back', @invoice %></li>
      </ul>
    <% end %>

  </div>
</div>
