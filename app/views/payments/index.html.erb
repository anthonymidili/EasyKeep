<h1>Listing payments</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Received on</th>
    <th>Amount</th>
    <th>Invoice</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.type %></td>
    <td><%= payment.received_on %></td>
    <td><%= payment.amount %></td>
    <td><%= payment.invoice_id %></td>
    <td><%= link_to 'Show', invoice_payment_path(@invoice, payment) %></td>
    <td><%= link_to 'Edit', edit_invoice_payment_path(@invoice, payment) %></td>
    <td><%= link_to 'Destroy', [@invoice, payment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Payment', new_invoice_payment_path(@invoice) %>

